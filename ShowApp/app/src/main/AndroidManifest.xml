<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cui.bupt.showapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/show_app_0"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ComicDetailActivity"
            android:label="@string/title_activity_comic_detail" />

        <service
            android:name=".MusicServer"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".VideoActivity"
            android:label="@string/title_activity_video" />
        <activity
            android:name=".WebActivity"
            android:label="@string/title_activity_web"></activity>
    </application>

</manifest>